{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_author_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_author_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'author.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_created_at'|trans, 'author.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_updated_at'|trans, 'author.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_name'|trans, 'author.name') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for author in pagination.items %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>{{ author.createdAt|format_date('long', locale='en') }}</td>
                    <td>{{ author.updatedAt|format_date('long') }}</td>
                    <td>{{ author.name }}</td>
                    <td>
                        <a href="{{ url('author_show', {id: author.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                        {{  " | "  }}
                        <a href="{{  url('author_edit', {id: author.id}) }}" title="{{  'action_edit'|trans }}">
                            {{'action_edit'|trans}}
                        </a>
                        {{  " | "  }}
                        <a href="{{ url('author_delete', {id: author.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>


{#                        {% if not author.book|length %}#}
{#                            <a href="{{ url('author_delete', {id: author.id}) }}" title="{{ 'action_delete'|trans }}">#}
{#                                {{ 'action_delete'|trans }}#}
{#                            </a>#}
{#                        {% endif %}#}
{#                        #}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="navigation text-center">
            <button type="button" class="btn btn-light">
                <a href="{{ url('author_create') }}" title="{{ 'title_author_create'|trans }}">
                    {{ 'title_author_create'|trans }}
                </a>
            </button>
        </div>



    {% else %}
        {%  include 'default/_single_flash_message.html.twig' with{
            type: 'warning',
            message: 'message_empty_list'|trans
        } %}

        <div class="navigation text-center">
            <button type="button" class="btn btn-light">
                <a href="{{ url('author_create') }}" title="{{ 'title_author_create'|trans }}">
                    {{ 'title_author_create'|trans }}
                </a>
            </button>
        </div>

    {% endif %}
{% endblock %}