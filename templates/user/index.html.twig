{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_user_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'user.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_email'|trans, 'user.email') }}</th>
{#                <th>{{ knp_pagination_sortable(pagination, 'label_roles'|trans, 'user.roles') }}</th>#}
                <th>{{'label_password' | trans}}</th>
{#                <th>{{ knp_pagination_sortable(pagination, 'label_is_verified'|trans, 'user.isVerified') }}</th>#}
                <th>{{ knp_pagination_sortable(pagination, 'label_username'|trans, 'user.userName') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.userName }}</td>
                    <td>
                        <a href="{{ url('user_show', {id: user.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                        {{  " | "  }}
                        <a href="{{  url('user_edit', {id: user.id}) }}" title="{{  'action_edit'|trans }}">
                            {{'action_edit'|trans}}
                        </a>
                        {{  " | "  }}
                        <a href="{{ url('user_delete', {id: user.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        {%  include 'default/_single_flash_message.html.twig' with{
            type: 'warning',
            message: 'message_empty_list'|trans
        } %}

    {% endif %}
{% endblock %}