{% extends 'base.html.twig' %}

{% block title %}
    {{'title_user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{'title_user_details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans}}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_email'|trans}}</dt>
            <dd>{{ user.email }}</dd>
{#            <dt>{{ 'label_roles'|trans }}</dt>#}
{#            <dd>{{ user.roles }}</dd>#}
            <dt>{{'label_password'}}</dt>
            <dd>{{ user.password }}</dd>
{#            <dt>{{ 'label_isVerified'|trans }}</dt>#}
{#            <dd>{{ user.isVerified }}</dd>#}
            <dt>{{ 'label_username'|trans }}</dt>
            <dd>{{ user.username }}</dd>
        </dl>

        <button type="button" class="btn btn-light">
            <a href="{{ url('user_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </button>

    {% else %}
        <p>
            {{ 'message_empty_list' | trans}}
        </p>


    {% endif %}
{% endblock %}