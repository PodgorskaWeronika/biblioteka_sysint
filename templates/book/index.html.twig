{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_book_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_book_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'book.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_created_at'|trans, 'book.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_updated_at'|trans, 'book.updatedAt') }}</th>
                <th>{{ 'label_author'|trans }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'book.title') }}</th>
                <th>{{ 'label_category'|trans }}</th>
                <th>{{ 'label_tag' |trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for book in pagination.items %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.createdAt|format_date('long', locale='en') }}</td>
                    <td>{{ book.updatedAt|format_date('long') }}</td>
                    <td>{{ book.author.name }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.category.title }}</td>
                    <td>
                        {% if book.tags is defined and book.tags|length %}
                            {%  for tag in book.tags %}
                                {{ tag.title }}
                            {%  endfor %}
                        {%  else %}

                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ url('book_show', {id: book.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                        {{  " | "  }}
                        <a href="{{  url('book_edit', {id: book.id}) }}" title="{{  'action_edit'|trans }}">
                            {{'action_edit'|trans}}
                        </a>
                        {{  " | "  }}
                        <a href="{{ url('book_delete', {id: book.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="navigation text-center">
            <button type="button" class="btn btn-light">
                <a href="{{ url('book_create') }}" title="{{ 'title_book_create'|trans }}">
                    {{ 'title_book_create'|trans }}
                </a>
            </button>
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>

        <div class="navigation text-center">
            <button type="button" class="btn btn-light">
                <a href="{{ url('book_create') }}" title="{{ 'title_book_create'|trans }}">
                    {{ 'title_book_create'|trans }}
                </a>
            </button>
        </div>

    {% endif %}
{% endblock %}